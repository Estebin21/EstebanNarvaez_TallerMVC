@model EstebanNarvaez_TallerMVC.Models.Equipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreEquipo" class="control-label"></label>
                <input asp-for="NombreEquipo" class="form-control" />
                <span asp-validation-for="NombreEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiudadEquipo" class="control-label"></label>
                <input asp-for="CiudadEquipo" class="form-control" />
                <span asp-validation-for="CiudadEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitulosEquipo" class="control-label"></label>
                <input asp-for="TitulosEquipo" class="form-control" />
                <span asp-validation-for="TitulosEquipo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AceptaExtranjeros" /> @Html.DisplayNameFor(model => model.AceptaExtranjeros)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadio" class="control-label"></label>
                <select asp-for="IdEstadio" class="form-control" asp-items="ViewBag.IdEstadio"></select>
                <span asp-validation-for="IdEstadio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
