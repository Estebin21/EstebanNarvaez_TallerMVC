@model EstebanNarvaez_TallerMVC.Models.Estadio

@{
    ViewData["Title"] = "Agregar Estadios";
}

<h1>Agregar Estadios</h1>

<h4>Estadio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEstadio" class="control-label"></label>
                <input asp-for="NombreEstadio" class="form-control" />
                <span asp-validation-for="NombreEstadio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionEstadio" class="control-label"></label>
                <input asp-for="DireccionEstadio" class="form-control" />
                <span asp-validation-for="DireccionEstadio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiudadEstadio" class="control-label"></label>
                <input asp-for="CiudadEstadio" class="form-control" />
                <span asp-validation-for="CiudadEstadio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadEstadio" class="control-label"></label>
                <input asp-for="CapacidadEstadio" class="form-control" />
                <span asp-validation-for="CapacidadEstadio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
